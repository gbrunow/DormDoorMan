@model DormDoorMan.Models.Visit

@{
    ViewBag.Title = "Create";
    ViewBag.Tab = "visit";
}
<script type="text/javascript">
    function addNewOption() {
        $('#ResidentID').select2({
            language: {
                noResults: function () {
                    return '@Html.ActionLink("Adicionar Novo", "Create", "Resident")';
                }
            },
            escapeMarkup: function (markup) {
                return markup;
            }
        });
        $('#VisitorID').select2({
            language: {
                noResults: function () {
                    return '@Html.ActionLink("Adicionar Novo", "Create", "Visitor")';
                }
            },
            escapeMarkup: function (markup) {
                return markup;
            }
        });
    };
</script>

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Visit</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Resident.Id, "Resident", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ResidentID", String.Empty)
                @Html.ValidationMessageFor(model => model.Resident.FullName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Visitor.Id, "Visitor", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VisitorID", String.Empty)
                @Html.ValidationMessageFor(model => model.Visitor.FullName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CheckIn, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CheckIn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CheckIn)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CheckOut, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CheckOut, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CheckOut)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}