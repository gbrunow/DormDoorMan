            @Html.DisplayFor(modelItem => item.hostingDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.extraDays)
        </td>
        <td>
            <span>R$ </span>@Html.DisplayFor(modelItem => item.hostingFees)
        </td>
