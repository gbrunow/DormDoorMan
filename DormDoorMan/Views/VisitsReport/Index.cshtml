@model IEnumerable<DormDoorMan.Models.VisitsReportViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Relatório de Diárias</h2>
<span>@DateTime.Now.Date.AddMonths(-1).ToLongDateString() à @DateTime.Now.Date.ToLongDateString()</span>
