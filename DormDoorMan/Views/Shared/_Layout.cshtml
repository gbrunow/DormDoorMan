<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Portaria FCEU</title>
    <link href="~/Content/select2.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Source+Code+Pro:300,400' rel='stylesheet' type='text/css'>
    <style>
        .code-like-text {
            font-family: 'Source Code Pro';
            font-weight: 100;
        }

        .code-like-text > b {
            font-weight: 400;
        }        
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand code-like-text" href="#">{ Portaria <b>FCEU</b> }</a>
                <!--@Html.ActionLink("Portaria FCEU", "Index", "Home", null, new { @class = "navbar-brand" })-->
            </div>
            <div id="navbar" class="collapse navbar-collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li id="home" onclick="$(this).addClass('active'); activeTab = $(this).id;">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li id="resident" onclick="$(this).addClass('active'); activeTab = $(this).id;">@Html.ActionLink("Moradores", "Index", "Resident")</li>
                    <li id="visitor" onclick="$(this).addClass('active'); activeTab = $(this).id;">@Html.ActionLink("Visitantes", "Index", "Visitor")</li>
                    <li id="visit" onclick="$(this).addClass('active'); activeTab = $(this).id;">@Html.ActionLink("Controle de Visitantes", "Index", "Visit")</li>
                    <li id="report" onclick="$(this).addClass('active'); activeTab = $(this).id;">@Html.ActionLink("Relatório de Visitas", "Index", "VisitsReport")</li>
                </ul>
            </div><!--/.nav-collapse -->
            <!--@Html.Partial("_LoginPartial")-->
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
    <script type="text/javascript">
        $('select').select2();
        $('.select2').width(280);
        $('.text-box').addClass("form-control"); //chuncho
        $('#' + "@ViewBag.Tab").addClass('active');
        try{
            addNewOption();
        }
        catch(e){
            console.log("No comboxes set up to receive link");
        }
    </script>
</body>
</html>